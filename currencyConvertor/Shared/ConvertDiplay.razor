@using currencyConvertor.Models
<div class="alert alert-secondary mt-4">
    @* <span class="oi oi-cash me-2" aria-hidden="true"></span> *@
    @if (Loading)
    {
    <p style="font-style: italic">Converting   <span class="oi oi-loop-circular"></span></p>
    }else{
        <small>@Amount @FromCurrency =</small>
        <br/>
        <strong style="font-size: larger;font-weight: bolder">@NewConvertedAmount @ToCurrency</strong>
    }
</div>

@code {
    [Parameter]
    public double? NewConvertedAmount { get; set; }

    [Parameter]
    public string? ToCurrency { get; set; }

    [Parameter]
    public string? FromCurrency { get; set; }

    [Parameter]
    public decimal? Amount { get; set; }

    [Parameter]
    public bool Loading { get; set; }

}